{
  "name": "beaverphone-kiosk",
  "version": "1.0.0",
  "description": "Kiosque Electron pour BeaverPhone (local) et BeaverNet.ca (cloud)",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite --config renderer/vite.config.js",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "build": "vite build --config renderer/vite.config.js",
    "start": "electron ."
  },
  "author": "RÃ©mi Guillette RG Groupe",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "ws": "^8.18.0",
    "lucide-react": "^0.379.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}